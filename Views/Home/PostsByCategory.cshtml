@model List<BlogProject.Models.Services.ViewModels.PostViewModel>

<h2>@ViewBag.CategoryName</h2>

@foreach (var post in Model)
{
    <div class="card my-3">
        <div class="card-body">
            <h5>@post.Title</h5>
            <p>@post.Content</p>
            <small>@post.PublishDate.ToShortDateString()</small>
        </div>
    </div>
}